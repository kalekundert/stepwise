test_check_for_long_lines:
  -
    text:
      - 12345
    content_width: 5
  -
    text:
      - 123456
    content_width: 5
    error:
      type: PrinterWarning
      message: line 1 is more than 5 characters long
  -
    id: trailing-whitespace
    text:
      - 12345 
    content_width: 5
  -
    text:
      - 123456
      - 123456
      - 12345
    content_width: 5
    error:
      type: PrinterWarning
      message: lines 1,2 are more than 5 characters long
  -
    text:
      - 123456
      - 123456
      - 123456
    content_width: 5
    error:
      type: PrinterWarning
      message: lines 1-3 are more than 5 characters long

